<idea-plugin>
  <id>site.forgus.plugins.api-generator</id>
  <name>API Generator</name>
  <version>2.0</version>
  <vendor email="wenbin1876@gmail.com" url="http://www.forgus.site">Forgus</vendor>

  <description><![CDATA[
      Api Generator.<br>
      <em>Support generate markdown for interface or upload to YApi for REST api.</em>
      Plugin settings:<br>
      Preferences —> Other Settings —> Api Generator Setting
    ]]></description>

  <change-notes><![CDATA[
      <em>2.0</em>
      Support upload to YApi for REST api.<br>
      <em>1.1</em>
      Support generate markdown for interface.<br>
      <em>1.0</em>
      upload to plugin marketplace test.
    ]]>
  </change-notes>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/build_number_ranges.html for description -->
  <idea-version since-build="173.0"/>

  <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
       on how to target different products -->
  <!-- uncomment to enable plugin in all products
  <depends>com.intellij.modules.lang</depends>
  -->

  <extensions defaultExtensionNs="com.intellij">
    <!-- Add your extensions here -->
    <applicationConfigurable instance="site.forgus.plugins.apigenerator.config.ApiGeneratorSetting"  />
    <applicationService serviceInterface="site.forgus.plugins.apigenerator.config.PersistentConfig" serviceImplementation="site.forgus.plugins.apigenerator.config.PersistentConfig"/>
  </extensions>

  <actions>
    <!-- Add your actions here -->
    <action id="api-generator.ID" class="site.forgus.plugins.apigenerator.normal.ApiGenerateAction" text="Api Generate"
            description="generate markdown for interface">
      <add-to-group group-id="EditorLangPopupMenu" anchor="first"/>
    </action>
    <action id="yapi-generator.ID" class="site.forgus.plugins.apigenerator.yapi.YApiGenerateAction" text="YApi Generate"
            description="upload to YApi for REST api">
      <add-to-group group-id="EditorLangPopupMenu" anchor="first"/>
    </action>
  </actions>

</idea-plugin>